<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="xml_based.Person" table="person">
       <id name="id" column="person_id">
           <generator class="native"></generator>
       </id>
        
        <property name="name" column="person_name" type="java.lang.String"></property>
        <property name="lastname" column="person_lastname" type="java.lang.String"></property>
        <property name="age" column="person_age" type="int"></property>

    </class>
</hibernate-mapping>